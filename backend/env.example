# Django Core Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,weavai.ai,weavai.hub

# Database (PostgreSQL)
# Docker: POSTGRES_* from infra/.env; local: below
DB_NAME=weav_ai
DB_USER=weav_user
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# Redis (Cache & Celery broker)
REDIS_URL=redis://localhost:6379/0

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Firebase Admin SDK (JWT 발급·User 저장)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=/path/to/firebase-admin-sdk.json
# FIREBASE_SERVICE_ACCOUNT_KEY_JSON='{"type":"service_account",...}'

# File Storage (MinIO/S3)
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123
AWS_STORAGE_BUCKET_NAME=weav-ai-files
AWS_S3_ENDPOINT_URL=http://localhost:9000
AWS_S3_CUSTOM_DOMAIN=

# Payments (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,https://weavai.ai,https://weavai.hub

# Email (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional
SENTRY_DSN=
LOG_LEVEL=INFO
